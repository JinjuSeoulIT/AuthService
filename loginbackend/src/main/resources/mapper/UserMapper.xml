<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="session.member.mapper.UserMapper">

    <!-- loginId 중복 체크 (카운터가 핵심) -->
    <select id="countByLoginId" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM member_user
        WHERE login_id = #{value}
    </select>




    <!-- 유저 ID/PW 생성 (user_id는 DB SEQ/트리거/기본값으로 생성된다고 가정) -->
    <insert id="insertUser">
        INSERT INTO member_user (user_id, login_id, password_hash)
        VALUES (SEQ_MEMBER_USER_ID.NEXTVAL, #{value}, #{passwordHash})
    </insert>




    <!-- 유저 검색용 -->
    <select id="selectUserById"
            parameterType="long"
            resultType="session.member.dto.membership.Response.UserResponseDTO">
        SELECT
            user_id        AS userId,
            login_id       AS loginId
        FROM member_user
        WHERE user_id = #{userId}
    </select>

    <!-- 로그인 검증용 row -->
    <select id="selectLoginRowByLoginId" parameterType="string" resultType="session.member.dto.login.LoginRowDTO">
        SELECT
            user_id        AS userId,
            login_id       AS loginId,
            password_hash  AS passwordHash,
            'LOCAL'        AS loginType
        FROM member_user
        WHERE login_id = #{value}
    </select>

    <!-- 유저삭제 검색용 -->
    <delete id="deleteUser" parameterType="long">
        DELETE FROM member_user
        WHERE user_id = #{userId}

    </delete>

</mapper>