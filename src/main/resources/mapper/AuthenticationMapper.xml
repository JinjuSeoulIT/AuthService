<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.module.authentication.mapper.AuthenticationMapper">


    <!--해당 유저테이블에 생성유무를 FK로 참조 -->
    <select id="selectAuthenticationIdByUserId"
            parameterType="long"
            resultType="long">
        SELECT authentication_id
        FROM MEMBER.member_authentication
        WHERE user_id = #{userId}
    </select>

    </mapper>

<!--해당 유저테이블에 생성유무를 FK로 참조하여 있으면 그 사람의 식별자 정보를 확인하기위해 따로 뺌 me -->

